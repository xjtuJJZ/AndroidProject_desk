<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_all"

    >
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"></androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/Et1"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/bd_4"
        android:hint="请输入用户名:"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:textColorHint="@color/黑色"
        app:layout_constraintBottom_toTopOf="@id/g3"
        app:layout_constraintLeft_toRightOf="@id/g9"
        app:layout_constraintRight_toLeftOf="@id/g10"
        app:layout_constraintTop_toTopOf="@id/g2">

    </EditText>

    <EditText
        android:id="@+id/Et2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/g3"
        app:layout_constraintBottom_toTopOf="@id/g4"
        app:layout_constraintLeft_toRightOf="@id/g9"
        app:layout_constraintRight_toLeftOf="@id/g10"
        android:background="@mipmap/bd_4"
        android:hint="请输入密码："
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:textColorHint="@color/黑色">

    </EditText>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:paddingTop="50dp"
        app:layout_constraintTop_toTopOf="@id/g4"
        app:layout_constraintBottom_toTopOf="@id/g5"
        app:layout_constraintLeft_toRightOf="@id/g7"
        app:layout_constraintRight_toLeftOf="@id/g8"
        android:background="@mipmap/btn_2"
        android:paddingLeft="50dp"
        android:text="登录"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/g5"
        app:layout_constraintBottom_toTopOf="@id/g6"
        app:layout_constraintLeft_toRightOf="@id/g7"
        app:layout_constraintRight_toLeftOf="@id/g8"
        android:background="@mipmap/btn_2"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:text="注册"
        android:textSize="20dp"></Button>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:src="@mipmap/name"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        app:layout_constraintLeft_toRightOf="@id/g9"
        app:layout_constraintRight_toLeftOf="@id/g10"
        app:layout_constraintTop_toTopOf="@id/g1"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>