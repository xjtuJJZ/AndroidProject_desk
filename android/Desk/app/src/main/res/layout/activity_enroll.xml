<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_all">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/Enroll_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textColor="@color/黑色"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/gl_2"
        app:layout_constraintTop_toTopOf="@id/gl_1"></TextView>

    <TextView
        android:id="@+id/enroll_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="id(英文或数字组合)："
        android:textColor="@color/黑色"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/Enroll_et"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"></androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/Enroll_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/gl_2"
        app:layout_constraintBottom_toTopOf="@id/gl_3"
        android:paddingLeft="20dp"
        android:background="@mipmap/bg7"
        android:inputType="text"></EditText>

    <EditText
        android:id="@+id/enroll_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/bg7"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/gl_"></EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/Enroll_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="密码："
        android:textColor="@color/黑色"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/gl_4"
        app:layout_constraintTop_toBottomOf="@+id/enroll_id"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"></androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/Enroll_et2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/bg7"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/gl_5"
        app:layout_constraintTop_toTopOf="@id/gl_4"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"></EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/Enroll_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="确认密码："
        android:textColor="@color/黑色"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/gl_6"

        app:layout_constraintTop_toTopOf="@id/gl_5"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"></androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/Enroll_et3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/bg7"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/gl_7"
        app:layout_constraintTop_toTopOf="@id/gl_6"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"></EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"></androidx.constraintlayout.widget.Guideline>
    <Button
        android:id="@+id/Enroll_btn_select"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:background="@mipmap/btn_2"
        app:layout_constraintTop_toTopOf="@id/gl_7"
        app:layout_constraintBottom_toTopOf="@id/gl_8"
        app:layout_constraintRight_toLeftOf="@id/gl_9"
        app:layout_constraintLeft_toRightOf="@id/gl_12"
        android:text="上传头像"
        android:textColor="@color/黑色"
        android:textSize="20dp"></Button>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"></androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/Enroll_iv1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@color/灰色"
        app:layout_constraintBottom_toTopOf="@id/gl_8"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toRightOf="@id/gl_10"
        app:layout_constraintRight_toLeftOf="@id/gl_13"
        app:layout_constraintTop_toTopOf="@id/gl_7"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars"></ImageView>

    <Button
        android:id="@+id/Enroll_btn_ensure"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/gl_8"
        app:layout_constraintRight_toLeftOf="@id/gl_9"
        app:layout_constraintBottom_toTopOf="@id/gl_11"
        app:layout_constraintLeft_toRightOf="@id/gl_12"
        android:background="@mipmap/btn_2"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:text="确认注册"
        android:textColor="@color/黑色"
        android:textSize="20dp"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>