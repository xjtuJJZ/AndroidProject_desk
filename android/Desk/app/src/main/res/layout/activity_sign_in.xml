<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_all">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/sign_in_tv"
        android:layout_width="207dp"
        android:layout_height="103dp"
        android:background="@mipmap/bd_4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="用户名"
        android:textColor="@color/黑色"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/g_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/g_3"
        app:layout_constraintRight_toLeftOf="@id/g_4"
        app:layout_constraintTop_toTopOf="@id/g_1"></TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/sign_in_iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/g_5"
        app:layout_constraintBottom_toTopOf="@id/g_6"
        app:layout_constraintRight_toLeftOf="@id/g_7"
        android:background="@drawable/bg_button"
        android:layout_below="@id/sign_in_tv"></ImageView>
    <ImageView
        android:id="@+id/sign_in_iv2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/g_5"
        app:layout_constraintBottom_toTopOf="@id/g_6"
        app:layout_constraintLeft_toRightOf="@id/g_7"
        android:background="@drawable/bg_button"
        android:layout_below="@id/sign_in_tv"></ImageView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"></androidx.constraintlayout.widget.Guideline>
    <Button
        android:id="@+id/sign_in_btn1"
        android:layout_width="197dp"
        android:layout_height="138dp"
        app:layout_constraintTop_toTopOf="@id/g_8"
        app:layout_constraintBottom_toTopOf="@id/g_9"
        app:layout_constraintLeft_toRightOf="@id/g_3"
        android:background="@mipmap/btn_2"
        android:paddingLeft="50dp"
        android:paddingTop="90dp"
        android:text="签到"
        android:textColor="@color/黑色"
        android:textSize="40dp"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>